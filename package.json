{
  "name": "aifwrapper",
  "version": "1.0.0",
  "description": "CAP application for AIF Wrapper",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^4.1.1",
    "@sap-cloud-sdk/http-client": "^4.1.1",
    "@sap-cloud-sdk/util": "^4.1.1",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4",
    "node-cron": "^4.2.1"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@jest/globals": "^30.0.5",
    "@sap/cds-dk": "^9.2.0",
    "@sap/eslint-plugin-cds": "^4",
    "eslint": "^9",
    "jest": "^30.0.5",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "rimraf resources gen && mbt build -t gen --mtar mta.tar",
    "deploy": "npm run build && cf deploy gen/mta.tar --retries 1",
    "tests": "jest --config jest.config.js",
    "watch-app": "cds watch --open app/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy aifwrapper --delete-services --delete-service-keys --delete-service-brokers",
    "watch-admin": "cds watch --open admin/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      }
    }
  },
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  }
}
